<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tech.ideapad.ureflect.Start">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/totaltime"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:text="0h 20min"
        android:background="#f9fcf7"
        android:backgroundTint="#c4f98e"
        android:paddingTop="9sp"/>
    <TextView
        android:id="@+id/txttotaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen Ussage"
        android:layout_below="@+id/totaltime"
        android:layout_toRightOf="@+id/textsession"
        android:textAlignment="center"
        android:layout_marginLeft="35sp"


        />


    <TextView
        android:id="@+id/session"
        android:layout_width="150sp"
        android:layout_height="80sp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:text="40x"
        android:background="#f8f9f7"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/totaltime"
        android:paddingTop="15sp"
        android:backgroundTint="#c4f98e"
        />
        <TextView
            android:id="@+id/textsession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sessions"
            android:layout_below="@+id/session"
            android:textAlignment="center"
            android:layout_marginLeft="39sp"

            />
    <TextView
        android:id="@+id/avgtime"
        android:layout_width="150sp"
        android:layout_height="80sp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:text="0m30s"
        android:background="#f8f9f7"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/totaltime"
        android:paddingTop="15sp"
        android:layout_toRightOf="@id/session"
        android:layout_marginLeft="45sp"
        android:backgroundTint="#c4f98e"


        />
    <TextView
        android:id="@+id/textavgtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="avg Time"
        android:layout_below="@+id/avgtime"
        android:layout_toRightOf="@+id/textsession"
        android:textAlignment="center"
        android:layout_marginLeft="140sp"

        />
    <ImageView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@+id/textavgtime"
        android:src="@mipmap/ic_graph"
        android:layout_marginLeft="35sp"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/longusage"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:text="1m 33sec"
        android:background="#f9fcf7"
        android:backgroundTint="#c4f98e"
        android:layout_below="@+id/graph"
        android:paddingTop="10sp"/>
    <TextView
        android:id="@+id/txtlongusage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="longest Session"
        android:layout_below="@+id/longusage"
        android:layout_toRightOf="@+id/textsession"
        android:textAlignment="center"
        android:layout_marginLeft="35sp"


        />



</RelativeLayout>
